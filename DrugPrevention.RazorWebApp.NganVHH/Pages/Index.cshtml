@page
@model IndexModel
@{
    ViewData["Title"] = "Hệ Thống Phòng Chống Tệ Nạn Xã Hội";
}

<style>
    .hero-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }
    
    .hero-container::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        animation: floatParticles 8s ease-in-out infinite;
    }
    
    @@keyframes floatParticles {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
    }
    
    .hero-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        box-shadow: 0 25px 80px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
    }
    
    .hero-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 35px 100px rgba(0, 0, 0, 0.2);
    }
    
    .hero-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .hero-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="3" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        animation: shimmerEffect 6s ease-in-out infinite;
    }
    
    @@keyframes shimmerEffect {
        0%, 100% { transform: translateX(0) translateY(0); }
        50% { transform: translateX(-10px) translateY(-5px); }
    }
    
    .hero-title {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
        letter-spacing: -1px;
    }
    
    .hero-subtitle {
        font-size: 1.3rem;
        margin-top: 1rem;
        opacity: 0.95;
        font-weight: 300;
        position: relative;
        z-index: 1;
        letter-spacing: 0.5px;
    }
    
    .hero-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: pulse 2s infinite;
        position: relative;
        z-index: 1;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .features-section {
        padding: 3rem 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }
    
    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
        position: relative;
        overflow: hidden;
    }
    
    .feature-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }
    
    .feature-icon {
        font-size: 3rem;
        color: #667eea;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
        transform: scale(1.1);
        color: #764ba2;
    }
    
    .feature-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1rem;
    }
    
    .feature-description {
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .feature-link {
        display: inline-flex;
        align-items: center;
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        background: linear-gradient(135deg, #f0f7ff 0%, #e1efff 100%);
    }
    
    .feature-link:hover {
        color: #764ba2;
        text-decoration: none;
        background: linear-gradient(135deg, #e1efff 0%, #d2e3ff 100%);
        transform: translateX(5px);
    }
    
    .feature-link i {
        margin-left: 0.5rem;
        transition: all 0.3s ease;
    }
    
    .feature-link:hover i {
        transform: translateX(3px);
    }
    
    .stats-section {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }
    
    .stat-item {
        padding: 1.5rem;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }
    
    .stat-item:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.15);
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: #3498db;
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        font-size: 1rem;
        opacity: 0.9;
        font-weight: 500;
    }
    
    .cta-section {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .cta-section::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        animation: floatParticles 10s ease-in-out infinite reverse;
    }
    
    .cta-content {
        position: relative;
        z-index: 1;
    }
    
    .cta-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .cta-description {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }
    
    .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-cta-primary {
        background: white;
        color: #e74c3c;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    }
    
    .btn-cta-primary:hover {
        background: #f8f9fa;
        color: #c0392b;
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        text-decoration: none;
    }
    
    .btn-cta-secondary {
        background: transparent;
        color: white;
        border: 2px solid white;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }
    
    .btn-cta-secondary:hover {
        background: white;
        color: #e74c3c;
        transform: translateY(-3px);
        text-decoration: none;
    }
    
    .footer-info {
        background: #2c3e50;
        color: white;
        padding: 2rem;
        text-align: center;
        font-size: 0.9rem;
        opacity: 0.8;
    }
    
    @@media (max-width: 768px) {
        .hero-container {
            padding: 1rem 0;
        }
        
        .hero-title {
            font-size: 2rem;
        }
        
        .hero-subtitle {
            font-size: 1rem;
        }
        
        .hero-icon {
            font-size: 3rem;
        }
        
        .features-section {
            padding: 2rem 1rem;
        }
        
        .features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .cta-title {
            font-size: 1.8rem;
        }
        
        .cta-description {
            font-size: 1rem;
        }
        
        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
        
        .btn-cta-primary,
        .btn-cta-secondary {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }
    }
</style>

<div class="hero-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">
                <div class="hero-card">
                    <div class="hero-header">
                        <div class="hero-icon">
                            🛡️
                        </div>
                        <h1 class="hero-title">Drug Prevention System</h1>
                        <p class="hero-subtitle">Hệ Thống Quản Lý Tư Vấn Phòng Chống Tệ Nạn Xã Hội</p>
                    </div>
                    
                    <div class="features-section">
                        <div class="text-center mb-4">
                            <h2 class="display-6 fw-bold text-primary">Tính Năng Chính</h2>
                            <p class="lead text-muted">Các công cụ hỗ trợ quản lý và tư vấn hiệu quả</p>
                        </div>
                        
                        <div class="features-grid">
                            <div class="feature-card">
                                <div class="feature-icon">
                                    📅
                                </div>
                                <h3 class="feature-title">Quản Lý Cuộc Hẹn</h3>
                                <p class="feature-description">
                                    Đặt lịch, theo dõi và quản lý các cuộc hẹn tư vấn một cách hiệu quả. 
                                    Hỗ trợ cả tư vấn trực tuyến và trực tiếp.
                                </p>
                                <a href="/AppointmentsNganVHH/Index" class="feature-link">
                                    Xem Danh Sách Cuộc Hẹn <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                            
                            <div class="feature-card">
                                <div class="feature-icon">
                                    👨‍⚕️
                                </div>
                                <h3 class="feature-title">Chuyên Gia Tư Vấn</h3>
                                <p class="feature-description">
                                    Kết nối với đội ngũ chuyên gia có kinh nghiệm trong lĩnh vực 
                                    phòng chống tệ nạn xã hội và hỗ trợ tâm lý.
                                </p>
                                <a href="/AppointmentsNganVHH/Create" class="feature-link">
                                    Đặt Lịch Tư Vấn <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
