@page
@model PrivacyModel
@{
    ViewData["Title"] = "Chính Sách Bảo Mật";
}

<style>
    .privacy-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }
    
    .privacy-container::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        animation: floatParticles 8s ease-in-out infinite;
    }
    
    @@keyframes floatParticles {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-15px) rotate(180deg); }
    }
    
    .privacy-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        box-shadow: 0 25px 80px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
        position: relative;
        z-index: 1;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
    }
    
    .privacy-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 30px 100px rgba(0, 0, 0, 0.2);
    }
    
    .privacy-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .privacy-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="3" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        animation: shimmerEffect 6s ease-in-out infinite;
    }
    
    @@keyframes shimmerEffect {
        0%, 100% { transform: translateX(0) translateY(0); }
        50% { transform: translateX(-8px) translateY(-4px); }
    }
    
    .privacy-title {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
        letter-spacing: -1px;
    }
    
    .privacy-subtitle {
        font-size: 1.3rem;
        margin-top: 1rem;
        opacity: 0.95;
        font-weight: 300;
        position: relative;
        z-index: 1;
        letter-spacing: 0.5px;
    }
    
    .privacy-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        animation: pulse 2s infinite;
        position: relative;
        z-index: 1;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .privacy-content {
        padding: 3rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }
    
    .privacy-section {
        margin-bottom: 3rem;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-left: 5px solid #667eea;
        transition: all 0.3s ease;
    }
    
    .privacy-section:hover {
        transform: translateX(5px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        border-left-color: #764ba2;
    }
    
    .section-title {
        color: #2c3e50;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }
    
    .section-title i {
        color: #667eea;
        font-size: 1.3rem;
    }
    
    .section-content {
        color: #495057;
        line-height: 1.8;
        font-size: 1rem;
    }
    
    .section-content p {
        margin-bottom: 1rem;
    }
    
    .section-content ul {
        padding-left: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .section-content li {
        margin-bottom: 0.5rem;
        position: relative;
    }
    
    .section-content li::marker {
        color: #667eea;
    }
    
    .highlight-box {
        background: linear-gradient(135deg, #e8f4fd 0%, #d6ebfa 100%);
        border: 2px solid #667eea;
        border-radius: 12px;
        padding: 1.5rem;
        margin: 1.5rem 0;
        position: relative;
        overflow: hidden;
    }
    
    .highlight-box::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
        animation: shimmer 3s infinite;
    }
    
    @@keyframes shimmer {
        0% { left: -100%; }
        100% { left: 100%; }
    }
    
    .highlight-box .highlight-title {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.8rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .highlight-box .highlight-content {
        position: relative;
        z-index: 1;
    }
    
    .contact-info {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .contact-info::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.05)"/></svg>') repeat;
        animation: contactParticles 10s ease-in-out infinite;
    }
    
    @@keyframes contactParticles {
        0%, 100% { transform: translateX(0) translateY(0); }
        50% { transform: translateX(8px) translateY(-4px); }
    }
    
    .contact-content {
        position: relative;
        z-index: 1;
    }
    
    .contact-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #3498db;
    }
    
    .contact-details {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }
    
    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
    }
    
    .contact-item i {
        color: #3498db;
    }
    
    .back-button {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 1.1rem;
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
        margin-top: 2rem;
    }
    
    .back-button:hover {
        background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(102, 126, 234, 0.4);
        color: white;
        text-decoration: none;
    }
    
    .back-button i {
        transition: transform 0.3s ease;
    }
    
    .back-button:hover i {
        transform: translateX(-3px);
    }
    
    @@media (max-width: 768px) {
        .privacy-container {
            padding: 1rem 0;
        }
        
        .privacy-title {
            font-size: 2rem;
        }
        
        .privacy-subtitle {
            font-size: 1rem;
        }
        
        .privacy-icon {
            font-size: 3rem;
        }
        
        .privacy-content {
            padding: 2rem 1rem;
        }
        
        .privacy-section {
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .section-title {
            font-size: 1.3rem;
        }
        
        .contact-details {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }
        
        .back-button {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }
    }
</style>

<div class="privacy-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">
                <div class="privacy-card">
                    <div class="privacy-header">
                        <div class="privacy-icon">
                            🛡️
                        </div>
                        <h1 class="privacy-title">Chính Sách Bảo Mật</h1>
                        <p class="privacy-subtitle">Drug Prevention System - Cam kết bảo vệ thông tin cá nhân</p>
                    </div>
                    
                    <div class="privacy-content">
                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-info-circle"></i>
                                Giới Thiệu
                            </h2>
                            <div class="section-content">
                                <p>
                                    Hệ thống Drug Prevention System cam kết bảo vệ quyền riêng tư và thông tin cá nhân của người dùng. 
                                    Chính sách này mô tả cách chúng tôi thu thập, sử dụng, và bảo vệ thông tin của bạn khi sử dụng dịch vụ tư vấn phòng chống tệ nạn xã hội.
                                </p>
                                <div class="highlight-box">
                                    <div class="highlight-title">
                                        <i class="fas fa-shield-alt"></i>
                                        Cam Kết Bảo Mật
                                    </div>
                                    <div class="highlight-content">
                                        Thông tin cá nhân và quá trình tư vấn của bạn được bảo mật tuyệt đối và chỉ được sử dụng cho mục đích hỗ trợ điều trị.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-database"></i>
                                Thông Tin Chúng Tôi Thu Thập
                            </h2>
                            <div class="section-content">
                                <p>Chúng tôi thu thập các loại thông tin sau:</p>
                                <ul>
                                    <li><strong>Thông tin cá nhân:</strong> Họ tên, email, số điện thoại</li>
                                    <li><strong>Thông tin y tế:</strong> Lịch sử sử dụng chất kích thích, tình trạng sức khỏe</li>
                                    <li><strong>Thông tin cuộc hẹn:</strong> Lịch tư vấn, ghi chú phiên tư vấn</li>
                                    <li><strong>Thông tin kỹ thuật:</strong> Địa chỉ IP, cookies, log truy cập</li>
                                </ul>
                            </div>
                        </div>

                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-cogs"></i>
                                Cách Chúng Tôi Sử Dụng Thông Tin
                            </h2>
                            <div class="section-content">
                                <p>Thông tin của bạn được sử dụng để:</p>
                                <ul>
                                    <li>Cung cấp dịch vụ tư vấn và hỗ trợ điều trị</li>
                                    <li>Lên lịch và quản lý các cuộc hẹn tư vấn</li>
                                    <li>Theo dõi tiến trình phục hồi và điều trị</li>
                                    <li>Liên hệ trong trường hợp khẩn cấp</li>
                                    <li>Cải thiện chất lượng dịch vụ</li>
                                </ul>
                            </div>
                        </div>

                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-lock"></i>
                                Bảo Mật Thông Tin
                            </h2>
                            <div class="section-content">
                                <p>Chúng tôi áp dụng các biện pháp bảo mật nghiêm ngặt:</p>
                                <ul>
                                    <li>Mã hóa dữ liệu SSL/TLS cho tất cả giao tiếp</li>
                                    <li>Kiểm soát truy cập nghiêm ngặt cho nhân viên</li>
                                    <li>Sao lưu dữ liệu định kỳ và bảo mật</li>
                                    <li>Kiểm tra bảo mật hệ thống thường xuyên</li>
                                    <li>Tuân thủ các tiêu chuẩn bảo mật quốc tế</li>
                                </ul>
                                <div class="highlight-box">
                                    <div class="highlight-title">
                                        <i class="fas fa-user-shield"></i>
                                        Quyền Riêng Tư Người Dùng
                                    </div>
                                    <div class="highlight-content">
                                        Bạn có quyền yêu cầu xem, sửa đổi hoặc xóa thông tin cá nhân của mình bất kỳ lúc nào.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-share-alt"></i>
                                Chia Sẻ Thông Tin
                            </h2>
                            <div class="section-content">
                                <p>
                                    Chúng tôi <strong>KHÔNG</strong> chia sẻ thông tin cá nhân của bạn với bên thứ ba, 
                                    trừ các trường hợp:
                                </p>
                                <ul>
                                    <li>Có sự đồng ý rõ ràng từ bạn</li>
                                    <li>Yêu cầu pháp lý từ cơ quan có thẩm quyền</li>
                                    <li>Trường hợp khẩn cấp đe dọa tính mạng</li>
                                    <li>Chia sẻ ẩn danh cho mục đích nghiên cứu y khoa</li>
                                </ul>
                            </div>
                        </div>

                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-clock"></i>
                                Lưu Trữ Dữ Liệu
                            </h2>
                            <div class="section-content">
                                <p>
                                    Thông tin của bạn được lưu trữ trong thời gian cần thiết để cung cấp dịch vụ 
                                    và tuân thủ các quy định pháp luật về hồ sơ y tế (tối thiểu 5 năm).
                                </p>
                                <p>
                                    Sau thời gian này, dữ liệu sẽ được xóa hoàn toàn hoặc ẩn danh hóa 
                                    để phục vụ mục đích nghiên cứu y khoa.
                                </p>
                            </div>
                        </div>

                        <div class="privacy-section">
                            <h2 class="section-title">
                                <i class="fas fa-edit"></i>
                                Cập Nhật Chính Sách
                            </h2>
                            <div class="section-content">
                                <p>
                                    Chính sách này có thể được cập nhật định kỳ để phản ánh các thay đổi 
                                    trong dịch vụ hoặc quy định pháp luật. 
                                </p>
                                <p>
                                    Chúng tôi sẽ thông báo cho bạn về các thay đổi quan trọng 
                                    qua email hoặc thông báo trên hệ thống.
                                </p>
                            </div>
                        </div>

                        <div class="contact-info">
                            <div class="contact-content">
                                <h3 class="contact-title">
                                    <i class="fas fa-envelope me-2"></i>
                                    Liên Hệ Với Chúng Tôi
                                </h3>
                                <p>Nếu bạn có bất kỳ câu hỏi nào về chính sách bảo mật này, vui lòng liên hệ:</p>
                                <div class="contact-details">
                                    <div class="contact-item">
                                        <i class="fas fa-envelope"></i>
                                        <span>privacy@drugprevention.com</span>
                                    </div>
                                    <div class="contact-item">
                                        <i class="fas fa-phone"></i>
                                        <span>1900-SUPPORT</span>
                                    </div>
                                    <div class="contact-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>FPT University, Hồ Chí Minh</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <a asp-page="/Index" class="back-button">
                                <i class="fas fa-arrow-left"></i>
                                Quay Về Trang Chủ
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
